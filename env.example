# Copy this file to .env.local and fill in your actual values
# Get these from your Neon database dashboard

POSTGRES_URL="postgresql://username:password@hostname:port/database?sslmode=require"
POSTGRES_PRISMA_URL="postgresql://username:password@hostname:port/database?sslmode=require&pgbouncer=true&connect_timeout=15"
POSTGRES_URL_NO_SSL="postgresql://username:password@hostname:port/database"
POSTGRES_URL_NON_POOLING="postgresql://username:password@hostname:port/database?sslmode=require"
POSTGRES_USER="username"
POSTGRES_HOST="hostname"
POSTGRES_PASSWORD="password"
POSTGRES_DATABASE="database"

# Auth.js Configuration
AUTH_SECRET="your-secret-key-here"

# Vercel Blob Storage
BLOB_READ_WRITE_TOKEN="your-blob-token-here"

# Facebook Pixel (optional)
NEXT_PUBLIC_FACEBOOK_PIXEL_ID="your-pixel-id-here"

# PostHog Analytics (optional)
# Single project setup - use filtering in PostHog dashboard
# - Set the same key for all environments (dev/staging/prod)
# - Events include environment metadata for filtering
# - Test: Automatically disabled when NODE_ENV=test
# - To disable dev tracking: Set NEXT_PUBLIC_DISABLE_DEV_TRACKING=true
NEXT_PUBLIC_POSTHOG_KEY="your-posthog-project-api-key"
NEXT_PUBLIC_POSTHOG_HOST="/ph"
# NEXT_PUBLIC_DISABLE_DEV_TRACKING="true"  # Uncomment to disable tracking in development

